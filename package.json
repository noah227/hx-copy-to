{
	"id": "noahyong-hx-copy-to",
	"name": "hx-copy-to",
	"description": "右键复制文件（夹）到选择的位置",
	"displayName": "文件复制",
	"version": "0.1.0",
	"publisher": "Noah Young",
	"engines": {
		"HBuilderX": "^2.9.12"
	},
	"categories": [
		"Other"
	],
	"main": "./extension",
	"scripts": {
		"cfg:build": "hx-cfg-helper"
	},
	"activationEvents": [
		"onCommand:extension.copyTo"
	],
	"contributes": {
		"commands": [
			{
				"command": "extension.copyTo",
				"title": "复制到 ->"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "extension.copyTo",
					"group": "z_commands",
					"when": "workspaceRelativePath"
				},
				{
					"group": "z_commands"
				}
			]
		},
		"configuration": {
			"title": "文件复制",
			"properties": {
				"noahyong-hx-copy-to.remindIfExist": {
					"type": "boolean",
					"default": true,
					"description": "文件存在时是否提示"
				}
			}
		}
	},
	"extensionDependencies": [
		"plugin-manager"
	],
	"dependencies": {
		"node-file-dialog": "^1.0.3"
	},
	"devDependencies": {
		"hx-configuration-helper": "^1.2.2"
	}
}
